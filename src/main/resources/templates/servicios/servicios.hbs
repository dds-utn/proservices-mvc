{{#partial "contenido" }}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <tr>
                <th>Nombre</th>
                <th>Cant. Tareas</th>
                <th>Acciones</th>
            </tr>
            <tbody>
            {{#each servicios}}
                <tr>
                    <td>{{this.nombre}}</td>
                    <td>{{this.cantTareas}}</td>
                    <td>
                        <a class="btn btn-secondary" href="/servicios/{{this.id}}/editar"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a class="btn btn-secondary" href="/servicios/{{this.id}}/tareas"><i class="fa-solid fa-list-check"></i></a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
    <div align="center">
        <a class="btn btn-primary" href="/servicios/crear">Agregar Servicio</a>
    </div>
{{/partial}}
{{> templates/base }}